{
  "openapi": "3.0.3",
  "info": {
    "title": "Pro-shortlinker API",
    "description": "An API for the application that can create a short link that will redirect to another one",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/sign-up": {
      "post": {
        "summary": "Create a new user account",
        "operationId": "signUp",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "required": true
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "required": true
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "accessToken": {
                        "type": "string"
                      },
                      "refreshToken": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request"
            },
            "409": {
              "description": "User already exists"
            }
          }
        }
      }
    },
    "/auth/sign-in": {
      "post": {
        "summary": "Sign in to an existing user account",
        "operationId": "signIn",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "required": true
                  },
                  "password": {
                    "type": "string",
                    "required": true
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User signed in successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "accessToken": {
                        "type": "string"
                      },
                      "refreshToken": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request"
            },
            "401": {
              "description": "Incorrect email or password"
            }
          }
        }
      }
    },
    "/link/create": {
      "post": {
        "summary": "Create a new short link",
        "operationId": "createLink",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "link": {
                    "type": "string",
                    "format": "url",
                    "required": true
                  },
                  "active_time": {
                    "type": "string",
                    "required": false
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Short link created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "original_link": {
                        "type": "string",
                        "format": "url"
                      },
                      "short_link": {
                        "type": "string",
                        "format": "url"
                      },
                      "owner_email": {
                        "type": "string",
                        "format": "email"
                      },
                      "expiration_time": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/link/deactivate": {
      "post": {
        "summary": "Create a new short link",
        "operationId": "createLink",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "link_id": {
                    "type": "string",
                    "format": "url",
                    "required": true
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Short link created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/my-links": {
      "get": {
        "summary": "Create a new short link",
        "operationId": "createLink",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "responses": {
            "200": {
              "description": "List of user`s links",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "original_link": {
                          "type": "string",
                          "format": "url"
                        },
                        "short_link": {
                          "type": "string",
                          "format": "url"
                        },
                        "expiration_time": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "summary": "Redirect to the original link",
        "operationId": "redirectLink",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Redirected to the original link"
          },
          "400": {
            "description": "Missing id parameter"
          },
          "404": {
            "description": "Short link not found"
          }
        }
      }
    }
  }
}
